<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymNote.View.CreateProfile"
             xmlns:vm="clr-namespace:GymNote.ViewModel"
             xmlns:localization="clr-namespace:GymNote.Localization"
             x:DataType="vm:CreateProfileViewModel"
             Title="{localization:Translate CreateProfileTitle}">
    <VerticalStackLayout>
        <Label Margin="5,40,10,0"
            Text="{Binding Surname, Mode=TwoWay}"
            VerticalOptions="Center"
            HorizontalOptions="Start"/>
        <Entry  x:Name="NameEntry"
                Text="{Binding Name}"/>
    </VerticalStackLayout>
</ContentPage>